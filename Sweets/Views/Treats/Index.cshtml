@{
  Layout = "_Layout";
}

@using Sweets.Models;

<h1>Treats for @User.Identity.Name</h1>

@if (@Model.Count == 0)
{
  <h3>No treat have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{Treat.Name}", "Details", new { id = treat.TreatId }) | @treat.Flavor.FlavorName</li>
    }
  </ul>
}

<hr />
<br>
<h5>@Html.ActionLink("Add treat", "Create")</h5>
<p>@Html.ActionLink("Home", "Index", "Home")</p