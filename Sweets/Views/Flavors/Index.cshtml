@{
  Layout = "_Layout";
}

@using Sweets.Models;

<h2>Flavors</h2>
<hr />
<br>
@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 

<ul>
  @foreach(Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.Treat.Name}", "Details", new { id = flavor.FlavorId })</li>
  }
</ul>
<hr />

<br>
<h5>@Html.ActionLink("Add a new flavor", "Create")</h5>