@{
  Layout = "_Layout";
}

@using Sweets.ViewModels

@model RegisterViewModel

<h2>Create an account</h2>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
  @* <h5>FirstName:
  @Html.TextBoxFor(user=> user.FirstName, new { @class = "form-control", placeholder="Required", required="required", style="width: 300px;"})</h5> *@
<br>
  <h5>Email:
  @Html.TextBoxFor(user=> user.Email, new { @class = "form-control", placeholder="Required", required="required", style="width: 300px;"})</h5>
<br>
  <h5>Password:
  @Html.PasswordFor(user=> user.Password, new { @class = "form-control", placeholder="Required", required="required", style="width: 200px;"})</h5>
<br>
  <h5>Confirm password: 
  @Html.PasswordFor(user=> user.ConfirmPassword, new { @class = "form-control", placeholder="Required", required="required", style="width: 200px;"})</h5>
<br>
  <input type="submit" value="Register" class="btn" />
}